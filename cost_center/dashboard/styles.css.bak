:root {
  --bg: #0f1115;
  --panel: #181b21;
  --text: #f5f6f8;
  --muted: #9aa0ad;
  --primary: #5bd2f0;
  --accent: #f28f3b;
  --border: #242832;
  --success: #8be28f;
  --warning: #ffd166;
}

* {
  box-sizing: border-box;
}

body {
  margin: 0;
  font-family: "Inter", system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI",
    sans-serif;
  background: radial-gradient(circle at 20% 20%, rgba(91, 210, 240, 0.08), transparent 25%),
    radial-gradient(circle at 80% 10%, rgba(242, 143, 59, 0.1), transparent 25%),
    var(--bg);
  color: var(--text);
  padding: 32px;
}

h1,
h2,
h3,
h4 {
  margin: 0 0 4px 0;
}

p {
  margin: 0;
}

.hero {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 16px;
  margin-bottom: 24px;
}

.eyebrow {
  text-transform: uppercase;
  letter-spacing: 0.08em;
  font-size: 12px;
  color: var(--muted);
  margin-bottom: 4px;
}

.subhead {
  color: var(--muted);
  max-width: 720px;
}

.badge {
  background: var(--panel);
  border: 1px solid var(--border);
  border-radius: 10px;
  padding: 12px 16px;
  min-width: 220px;
  text-align: right;
  color: var(--muted);
}

.hero-actions {
  display: flex;
  gap: 8px;
  margin-top: 12px;
}

.btn {
  border: 1px solid var(--border);
  background: transparent;
  color: var(--text);
  padding: 10px 14px;
  border-radius: 8px;
  cursor: pointer;
  font-weight: 600;
}

.btn.primary {
  background: linear-gradient(135deg, var(--primary), #3eb5ea);
  border: none;
  color: #0f1115;
}

.btn.ghost {
  color: var(--muted);
}

.panel {
  background: var(--panel);
  border: 1px solid var(--border);
  border-radius: 12px;
  padding: 16px;
  margin-bottom: 16px;
  box-shadow: 0 12px 30px rgba(0, 0, 0, 0.2);
}

.panel-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
}

.filters {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
  gap: 12px;
}

label {
  display: flex;
  flex-direction: column;
  font-size: 14px;
  color: var(--muted);
  gap: 6px;
}

select,
input[type="date"] {
  background: #0f1115;
  border: 1px solid var(--border);
  color: var(--text);
  padding: 10px;
  border-radius: 8px;
}

.grid {
  display: grid;
  gap: 16px;
}

.two-col {
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
}

.kpis {
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
}

.kpi {
  background: linear-gradient(145deg, #141821, #0f1218);
  border: 1px solid var(--border);
  border-radius: 12px;
  padding: 14px;
}

.kpi .label {
  color: var(--muted);
  font-size: 13px;
}

.kpi .value {
  font-size: 24px;
  font-weight: 700;
}

.kpi .delta {
  color: var(--success);
  font-size: 13px;
}

.muted {
  color: var(--muted);
}

.table-wrapper {
  overflow: auto;
}

table {
  width: 100%;
  border-collapse: collapse;
}

th,
td {
  padding: 8px 6px;
  text-align: left;
  border-bottom: 1px solid var(--border);
  font-size: 14px;
}

th {
  color: var(--muted);
  font-weight: 600;
}

td.num {
  text-align: right;
}

.chip {
  display: inline-block;
  background: #11151b;
  border: 1px solid var(--border);
  border-radius: 999px;
  padding: 4px 8px;
  margin: 2px;
  font-size: 12px;
  color: var(--muted);
}

.footer {
  color: var(--muted);
  margin-top: 16px;
}

.date-range {
  display: none;
}

.show {
  display: flex !important;
}

@media (max-width: 720px) {
  body {
    padding: 16px;
  }
  .hero {
    flex-direction: column;
  }
  .badge {
    width: 100%;
    text-align: left;
  }
}
